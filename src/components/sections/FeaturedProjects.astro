---
import projects from '../../data/projects.ts';

const maxVisibleProjects = 3; // Show 3 featured projects by default
---

<section class="bg-slate-700 py-16" id="projects">
  <div class="container mx-auto px-6">
    <h2
      class="mb-8 text-center text-3xl font-bold text-slate-50"
    >
      Featured Projects
    </h2>
    <p class="mb-12 text-center text-gray-500 text-slate-100">
      A selection of projects showcasing my skills in React,
      Next.js, and more.
    </p>

    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
      {
        projects.slice(0, maxVisibleProjects).map((project) => (
          <div class="overflow-hidden rounded-2xl bg-white shadow-lg transition hover:scale-105">
            <img
              alt={project.title}
              class="h-48 w-full object-cover"
              src={project.image}
            />

            <div class="p-6">
              <h3 class="mb-2 text-xl font-semibold">
                {project.title}
              </h3>
              <p class="mb-4 text-sm text-gray-500">
                {project.description}
              </p>

              <div class="mb-4 flex flex-wrap gap-2">
                {project.tech.map((tech) => (
                  <span class="rounded bg-gray-200 px-2 py-1 text-sm">
                    {tech}
                  </span>
                ))}
              </div>

              <div class="flex gap-4">
                {project.live && (
                  <a
                    class="text-blue-500 hover:underline"
                    href={project.live}
                    target="_blank"
                  >
                    Live Demo
                  </a>
                )}

                {project.github && (
                  <a
                    class="text-gray-500 hover:underline"
                    href={project.github}
                    target="_blank"
                  >
                    GitHub
                  </a>
                )}
              </div>
            </div>
          </div>
        ))
      }
    </div>

    <div class="mt-12 text-center">
      <a
        class="inline-block rounded-2xl bg-blue-500 px-6 py-3 text-white hover:bg-blue-600"
        href="/projects"
      >
        View All Projects
      </a>
    </div>
  </div>
</section>
