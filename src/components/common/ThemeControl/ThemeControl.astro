---
import classNames from 'classnames';

import Icon from '../Icon.astro';

const iconClasses = classNames('w-4 h-4');
const themeBtnBase =
  'rounded-full p-2 transition-colors focus:outline-none focus-visible:ring-2 focus-visible:ring-primary-400 hover:bg-primary-400 hover:text-white focus-visible:ring-offset-2';
const themeBtnActive =
  'bg-primary-400 text-white shadow-md cursor-default';
const themeBtnInactive = 'cursor-pointer';
const themeBtnDarkActive =
  'dark:bg-gray-800 dark:text-primary-400';
---

<theme-control
  class="flex gap-1 rounded-full bg-primary-500 dark:bg-gray-900"
>
  <button
    aria-label="Set system Mode"
    class={classNames(themeBtnBase, themeBtnInactive)}
    id="systemButton"
    tabindex="0"
    aria-pressed="false"
  >
    <Icon className={iconClasses} name="computer-line" />
  </button>
  <button
    aria-label="Set Light Mode"
    class={classNames(themeBtnBase, themeBtnInactive)}
    id="lightButton"
    tabindex="0"
    aria-pressed="false"
  >
    <Icon className={iconClasses} name="sun-fill" />
  </button>
  <button
    aria-label="Set Dark Mode"
    class={classNames(themeBtnBase, themeBtnInactive)}
    id="darkButton"
    tabindex="0"
    aria-pressed="false"
  >
    <Icon className={iconClasses} name="moon-fill" />
  </button>
</theme-control>

<style></style>

<script>
  class ThemeControl extends HTMLElement {
    updateTheme(theme?: string) {
      if (theme !== 'system') {
        document.documentElement.classList.toggle(
          'dark',
          theme === 'dark'
        );
        localStorage.theme = theme;
        this.setActiveIcon();
        return;
      }
      localStorage.removeItem('theme');
      document.documentElement.classList.toggle(
        'dark',
        localStorage.theme === 'dark' ||
          (!('theme' in localStorage) &&
            window.matchMedia('(prefers-color-scheme: dark)')
              .matches)
      );
      this.setActiveIcon();
    }

    setActiveIcon() {
      const buttons = this.querySelectorAll('button');
      const theme = localStorage.theme || 'system';
      buttons.forEach((button) => {
        button.setAttribute('aria-pressed', 'false');
        button.classList.remove(
          'bg-primary-400',
          'dark:bg-gray-800',
          'text-white',
          'shadow-md',
          'cursor-default'
        );
        button.classList.add('cursor-pointer');
      });
      const activeButton = this.querySelector(`#${theme}Button`);
      if (activeButton) {
        activeButton.setAttribute('aria-pressed', 'true');
        activeButton.classList.add(
          'bg-primary-400',
          'dark:bg-gray-800',
          'text-white',
          'shadow-md',
          'cursor-default'
        );
        activeButton.classList.remove('cursor-pointer');
      }
    }

    connectedCallback() {
      this.setActiveIcon();
      this.querySelector('#systemButton')?.addEventListener(
        'click',
        () => this.updateTheme('system')
      );

      this.querySelector('#darkButton')?.addEventListener(
        'click',
        () => this.updateTheme('dark')
      );

      this.querySelector('#lightButton')?.addEventListener(
        'click',
        () => this.updateTheme('light')
      );
    }
  }

  customElements.define('theme-control', ThemeControl);
</script>
